<configs>
	<!-- WHEAT -->

	<append xpath="/blocks/block[@name='DFWheatPlantWild']">
		<property name="HarvestCrop" value="true"/>
		<drop event="Harvest" name="DFWheat" count="1" prob="0.75" tag="wildMowing"/>
		<drop event="Harvest" name="DFWheat" count="1,3" prob="0.975" tag="cropMowing"/>
	</append>
	<append xpath="/blocks/block[@name='DFWheatPlantYoung']">
		<property name="ProtectedPlant" value="true"/>
	</append>
	<append xpath="/blocks/block[@name='DFWheatPlantPlayer']">
		<property name="CropReplacement" value="DFseedWheat"/>
		<drop event="Harvest" name="DFWheat" count="2,4" prob="0.925" tag="cropMowing"/>
		<drop event="Destroy" name="DFseedWheat" count="1,2" prob="0.775" tag="cropMowing"/>
	</append>

