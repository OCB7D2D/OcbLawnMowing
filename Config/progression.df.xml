<configs patcher-version="4">

	<!-- Crop collector and reseeder are reserver for farmer class -->

	<!-- Allow the lawn mower to be build when the minibike can be built (for all non mechanics) -->
	<append xpath="/progression/perks/perk[@name='perkMinibike']/effect_group/passive_effect[@name='RecipeTagUnlocked' and @level='2,3']/@tags"
			>,vehicleLawnMowerChassis,vehicleLawnMowerAccessories,modVehicleMowerCropsProtector</append>

	<!-- Allow some collectors to be built with basic farming tips (if you don't have the farmer class) -->
	<append xpath="/progression/perks/perk[@name='perkBasicFarming']/effect_group/passive_effect[@level='1,3']/@tags">,modVehicleMowerGrassCollector</append>
	<append xpath="/progression/perks/perk[@name='perkBasicFarming']/effect_group/passive_effect[@level='2,3']/@tags">,modVehicleMowerPlantCollector</append>
	<append xpath="/progression/perks/perk[@name='perkBasicFarming']/effect_group/passive_effect[@level='3']/@tags">,modVehicleMowerCropsCollector</append>

	<!-- Mechanic class can build a lawn mower from the start -->
	<append xpath="/progression/attributes/attribute[@name='attClassMechanic']/effect_group/passive_effect[@name='CraftingTier']/@tags"
			>,vehicleLawnMowerChassis,vehicleLawnMowerAccessories,modVehicleMowerCropsProtector</append>

	<!-- Farmer class can build the crop protector from the beginning -->
	<append xpath="/progression/attributes/attribute[@name='attClassFarmer']/effect_group/passive_effect[@name='CraftingTier']/@tags"
			>,modVehicleMowerCropsProtector</append>
	<!-- vehicle via minibike perk -->

	<!-- Farmers still need to enable other accessories with the living of the land perk -->
	<append xpath="/progression/perks/perk[@name='perkLivingOffTheLand']/effect_group/passive_effect[@name='RecipeTagUnlocked' and @level='1,5']/@tags">,modVehicleMowerGrassCollector</append>
	<append xpath="/progression/perks/perk[@name='perkLivingOffTheLand']/effect_group/passive_effect[@name='RecipeTagUnlocked' and @level='2,5']/@tags">,modVehicleMowerPlantCollector</append>
	<append xpath="/progression/perks/perk[@name='perkLivingOffTheLand']/effect_group/passive_effect[@name='RecipeTagUnlocked' and @level='3,5']/@tags">,modVehicleMowerCropsCollector</append>
	<append xpath="/progression/perks/perk[@name='perkLivingOffTheLand']/effect_group/passive_effect[@name='RecipeTagUnlocked' and @level='4,5']/@tags">,modVehicleMowerCropsReseeder</append>

	<!-- Allow the crop reseeder also to be built by advanced engineering perk -->
	<append xpath="/progression/perks/perk[@name='perkAdvancedEngineering']/effect_group/passive_effect[@name='RecipeTagUnlocked' and @level='4,5']/@tags">,modVehicleMowerCropsReseeder</append>

