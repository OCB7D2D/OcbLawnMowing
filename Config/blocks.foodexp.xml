<configs>
	<!-- WHEAT -->

	<append xpath="/blocks/block[@name='WheatPlant']">
		<drop event="Harvest" name="foodCropWheat" count="1" prob="0.75" tag="wildMowing"/>
		<drop event="Harvest" name="foodCropWheat" count="1,3" prob="0.975" tag="cropMowing"/>
	</append>

	<append xpath="/blocks/block[@name='WheatPlantPlayer']">
		<drop event="Harvest" name="foodCropWheat" count="2,4" prob="0.925" tag="cropMowing"/>
		<drop event="Destroy" name="seedWheat" count="1,2" prob="0.775" tag="cropMowing"/>
	</append>

